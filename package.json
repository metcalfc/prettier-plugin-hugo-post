{
  "name": "prettier-plugin-hugo-post",
  "version": "0.1.2",
  "description": "A Prettier plugin for Hugo content files with YAML front matter, Markdown content, and Go template syntax",
  "main": "src/index.js",
  "type": "module",
  "keywords": [
    "prettier",
    "plugin",
    "hugo",
    "markdown",
    "yaml",
    "go-template",
    "front-matter",
    "static-site-generator"
  ],
  "author": "Chad Metcalf <chad@metcalfc.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/metcalfc/prettier-plugin-hugo-post.git"
  },
  "bugs": {
    "url": "https://github.com/metcalfc/prettier-plugin-hugo-post/issues"
  },
  "homepage": "https://github.com/metcalfc/prettier-plugin-hugo-post#readme",
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "jest": "^30.1.3",
    "prettier": "^3.0.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "example": "prettier --plugin ./src/index.js examples/test.md"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ]
}
